@model IEnumerable<NhomB4.Models.Product>

@{
    ViewBag.Title = "Index_2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    <link rel="stylesheet" href="~/Content/lichsudathang.css">
}

<h2>DANH SÁCH SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="tftable" border="1">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Mô tả sản phẩm
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Gía
        </th>
        <th>
            Status
        </th>
        <th>
            Hình
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DecriptionPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImagePro)" height="200" width="200" />

            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Chi tiết", "Details_Admin", new { id = item.ProductID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }
</table>
